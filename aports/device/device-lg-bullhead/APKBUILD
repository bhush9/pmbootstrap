# Reference: <https://postmarketos.org/devicepkg>
pkgname="device-lg-bullhead"
pkgdesc="Google Nexus 5X"
pkgver=0.1
pkgrel=2
url="https://postmarketos.org"
license="MIT"
arch="noarch"
options="!check"
depends="postmarketos-base linux-lg-bullhead mkbootimg mesa-dri-swrast libsparse msm-fb-refresher"
makedepends="devicepkg-dev"
source="deviceinfo fb.modes directfbrc"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	install -Dm644 "$srcdir/fb.modes" \
		"$pkgdir/etc/fb.modes"
	install -Dm644 "$srcdir/directfbrc" \
		"$pkgdir/etc/directfbrc"

	devicepkg_package $startdir $pkgname
}

